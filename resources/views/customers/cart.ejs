<section class="cart py-16">

<div class="order container mx-auto w-1/2 ">
<div class="flex items-center border-b border-gray-300 pb-4">
<img src="/img/cart-black.png" alt="Cart">
<h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
</div>
<% if (session.cart && session.cart.items){ %>
<% for(let i in session.cart.items) { %>


<div class="pizz-list">
    <div class="flex items-center my-8">
        <img class="w-24" src="/img/<%= session.cart.items[i].item.image %>">
        <div class="ml-4 flex-1">
            <h1>
                <%= session.cart.items[i].item.name %>
            </h1>
            <span>
                <%= session.cart.items[i].item.size %>
            </span>
        </div>
        <span class="flex-1">
            <%= session.cart.items[i].qty%>
        </span>
        <span class="font-bold text-lg">
            <%=( session.cart.items[i].item.price * session.cart.items[i].qty).toFixed(2) %>$
        </span>
    </div>
</div>
<% } %>




    <hr>
    <div class="text-right py-4">
        <div>
            <span class="text-lg font-bold">Total Amount :</span>
            <span class="amount text-2xl font-bold ml-2">
                <%=(session.cart.total_Price).toFixed(2)%>$
            </span>
            <div>
                <%if (messages.error) { %>
                    <span class=" sm:mx-auto mt-3 font-bold text-red-500 text-lg"><%=messages.error %></span>
                    <% }%>
                <form action="/order" class="mt-12" method="post">
                    <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text"
                        placeholder="Phone-Number" name="phone">
                    <input class="border border-gray-400 p-2 w-1/2" name="address" type="text" placeholder="Address">
                    <div>
                        <% if (user) { %>
                        <button type="submit" id="orderbtn" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6"> Order Now </button>
                        <% } else { %>
                        <a href=""
                        class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login
                        to continue</a>
                        <%}%>
                    </div>
                </form>
            </div>
            
        </div>

    </div>

</div>
<% } else { %>

<div class="empty-cart py-6">

<div class="container mx-auto text-center">

    <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜Š</h1>

    <p class="text-lg text-gray mb-5">
        You probably did not ordered pizza Yet.<br>
        To Order Pizza , go to main page
    </p>
    <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="Cart-Empty">
    <a href="/resources/views/home.ejs"
        class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-3">Go Back</a>

</div>
</div>
<% } %>


</section>